sing iAFWebHost.Entities;
@model iAFWebHost.Models.UrlModel

@{
    Layout = null;
}
<!DOCTYPE HTML>
<html>
<head>
    <style id="noFrame">
        body { display: none !important; }
    </style>
    <script type="text/javascript">
        var frame_check = false;
        if (self === top) {
            var noFrame = document.getElementById("noFrame");
            noFrame.parentNode.removeChild(noFrame);
            frame_check = true;
        } else {
            top.location = self.location;
            document.write('<!--');
            window.onload = function () { document.write('Security Error. If you see this message please contact the owner of the website and inform them that i.af links cannot be placed in a frame.'); }
        }
    </script>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />
    <title>Ad title goes here</title>
    <style>
        * {
            margin: 0;
            padding: 0;
        }
        html, body {
            height: 100%;
            width: 100%;
            overflow: hidden;
        }
        table {
            height: 100%;
            width: 100%;
            table-layout: static;
            border-collapse: collapse;
        }
        iframe {
            height: 100%;
            width: 100%;
        }
        .header {
            border-bottom: 1px solid #000;
        }
        .content {
            height: 100%;
        }
    </style>
</head>
<body>
    <table>
        <tr><td class="header"><div><h1>Ad Description Goes Here</h1></div></td></tr>
        <tr>
            <td class="content">
                <iframe src="@Model.Href" frameborder="0" />
            </td>
        </tr>
    </table>
</body>
</html>
