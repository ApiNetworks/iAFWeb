                <table class="table table-striped table-condensed">
                    <thead>
                        <tr>
                            <th>Date Time</th>
                            <th>Click Count</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.DailyDataPoints)
                        {
